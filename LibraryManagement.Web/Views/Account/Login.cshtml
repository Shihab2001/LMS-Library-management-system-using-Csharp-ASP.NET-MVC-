@model LibraryManagement.Web.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            min-height: 100vh;
            background: url('/images/library-bg.jpg') center center/cover no-repeat fixed;
            filter: none;
        }
        .auth-blur-bg {
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            width: 100vw; height: 100vh;
            background: inherit;
            filter: blur(8px) brightness(0.8);
            z-index: 0;
        }
        .auth-main {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
        }
        .auth-card {
            display: flex;
            width: 900px;
            max-width: 98vw;
            min-height: 540px;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 8px 32px rgba(60,60,60,0.18);
            overflow: hidden;
        }
        .auth-illustration {
            background: #b7d3c6;
            flex: 1 1 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 48px 32px;
        }
        .auth-illustration svg {
            width: 220px;
            height: 220px;
            margin-bottom: 32px;
        }
        .auth-illustration h2 {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 8px;
        }
        .auth-illustration p {
            color: #4b5c5e;
            font-size: 1rem;
            margin-bottom: 0;
        }
        .auth-form-side {
            flex: 1 1 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 48px 32px;
            background: #fff;
        }
        .auth-logo {
            font-family: 'Pacifico', cursive;
            font-size: 2rem;
            color: #222;
            margin-bottom: 16px;
        }
        .auth-form-title {
            font-size: 1.2rem;
            font-weight: 500;
            margin-bottom: 24px;
        }
        .auth-form {
            width: 100%;
            max-width: 340px;
        }
        .form-control, .btn {
            border-radius: 8px;
        }
        .btn-auth {
            width: 100%;
            padding: 0.7rem;
            font-size: 1rem;
            border-radius: 8px;
        }
        .auth-divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 24px 0 16px 0;
        }
        .auth-divider::before, .auth-divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e0e0e0;
        }
        .auth-divider:not(:empty)::before {
            margin-right: .75em;
        }
        .auth-divider:not(:empty)::after {
            margin-left: .75em;
        }
        .auth-social-btn {
            width: 100%;
            background: #fff;
            border: 1px solid #e0e0e0;
            color: #444;
            border-radius: 8px;
            padding: 0.6rem;
            font-size: 1rem;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        .auth-links {
            margin-top: 18px;
            font-size: 0.97rem;
        }
        .auth-links a {
            color: #4b5c5e;
            text-decoration: underline;
        }
        media (max-width: 900px) {
            .auth-card { flex-direction: column; width: 98vw; min-height: 0; }
            .auth-illustration, .auth-form-side { padding: 32px 12px; }
        }
        .custom-indicators button {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: none;
            background: #fff;
            opacity: 0.5;
            transition: all 0.3s cubic-bezier(.4,0,.2,1);
            margin: 0 4px;
        }
        .custom-indicators button.active {
            width: 24px;
            background: #4F8A8B;
            opacity: 1;
        }
    </style>
    <link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet">
</head>
<body>
    <div class="auth-blur-bg"></div>
    <div class="auth-main">
        <div class="auth-card">
            <!-- Left: Illustration -->
            <div class="auth-illustration p-0" style="background: #b7d3c6; padding: 0; position: relative;">
                <div id="loginCarousel" class="carousel slide carousel-fade h-100" data-bs-ride="carousel" data-bs-interval="3500">
                    <div class="carousel-inner h-100">
                        <div class="carousel-item active h-100">
                            <img src="https://img.freepik.com/free-photo/international-day-education-illustration_23-2151101755.jpg?t=st=1746479690~exp=1746483290~hmac=71fe48d7279ce4a956c7b0beb5113026c85e39e0f64c2f5f7a05eedb1eaf3d32&w=2000" class="d-block w-100 h-100" alt="Dreamy reading 1" style="object-fit:cover;object-position:center;min-height:100%;min-width:100%;">
                        </div>
                        <div class="carousel-item h-100">
                            <img src="https://img.freepik.com/free-photo/international-day-education-cartoon-style_23-2151007401.jpg?t=st=1746479834~exp=1746483434~hmac=053e2024a566a1adaa5c9950a8ba9f89adb44bcf05ec1f92c86179d1f1e45454&w=1380" class="d-block w-100 h-100" alt="Dreamy reading 2" style="object-fit:cover;object-position:center;min-height:100%;min-width:100%;">
                        </div>
                        <div class="carousel-item h-100">
                            <img src="https://img.freepik.com/free-photo/fairytale-scene-coming-out-book_23-2151778611.jpg?t=st=1746479859~exp=1746483459~hmac=789802a49f2fcd31fed88bd53cb73e46feaae60cbdfe16912936a06fb942fa94&w=2000" class="d-block w-100 h-100" alt="Dreamy reading 3" style="object-fit:cover;object-position:center;min-height:100%;min-width:100%;">
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right: Login Form -->
            <div class="auth-form-side">
                <div class="auth-logo mb-2 d-flex justify-content-center">
                    <!-- Minimal, modern book+glasses SVG logo -->
                    <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <!-- Book base -->
                        <path d="M8 32 Q24 16 40 32" fill="#fff" stroke="#4F8A8B" stroke-width="3"/>
                        <rect x="8" y="32" width="32" height="6" rx="3" fill="#4F8A8B"/>
                        <!-- Glasses -->
                        <circle cx="18" cy="18" r="4" stroke="#4F8A8B" stroke-width="2" fill="none"/>
                        <circle cx="30" cy="18" r="4" stroke="#4F8A8B" stroke-width="2" fill="none"/>
                        <line x1="22" y1="18" x2="26" y2="18" stroke="#4F8A8B" stroke-width="2"/>
                    </svg>
                </div>
                <div class="auth-form-title mb-3">Welcome to the library</div>
                <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label class="form-label">Users name or Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email or username" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 position-relative">
                        <label class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                        <span class="password-toggle" onclick="togglePassword(this)">
                            <i class="bi bi-eye"></i>
                        </span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>
                        <a asp-action="ForgotPassword" class="small">Forgot password?</a>
                    </div>
                    <button type="submit" class="btn btn-dark btn-auth mb-2">Sign in</button>
                </form>
                <div class="auth-links mt-3">
                    New Reader? <a asp-action="Register">Create Account</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function togglePassword(element) {
            const input = element.previousElementSibling;
            const icon = element.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
</body>
</html> 
@model LibraryManagement.Web.Models.BookIssue
@{
    ViewData["Title"] = "Delete Issued Book Log";
}
<div class="card mt-5 mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <h2 class="card-title text-danger mb-3"><i class="bi bi-trash"></i> Delete Issued Book Log</h2>
        <p>Are you sure you want to delete this issued book log?</p>
        <dl class="row mb-3">
            <dt class="col-sm-4">Book</dt>
            <dd class="col-sm-8">@Model.Book?.Title</dd>
            <dt class="col-sm-4">Member</dt>
            <dd class="col-sm-8">@Model.Member?.FullName</dd>
            <dt class="col-sm-4">Date Issued</dt>
            <dd class="col-sm-8">@Model.DateIssued.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-4">Due Date</dt>
            <dd class="col-sm-8">@Model.DateDue.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>
        </dl>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div> 
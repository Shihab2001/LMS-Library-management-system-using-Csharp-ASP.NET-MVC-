@model LibraryManagement.Web.Models.Member

@{
    ViewData["Title"] = "Delete Member";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Member</h4>
                </div>
                <div class="card-body text-center">
                    <img src="https://ui-avatars.com/api/?name=@Model.FullName&background=6ec6ff&color=fff&size=96" class="rounded-circle mb-3" alt="Avatar" width="96" height="96">
                    <h5 class="mb-1">@Model.FullName</h5>
                    <p class="mb-2 text-muted">@Model.Email</p>
                    <p>Are you sure you want to delete this member?</p>
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
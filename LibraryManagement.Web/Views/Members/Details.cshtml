@model LibraryManagement.Web.Models.Member

@{
    ViewData["Title"] = "Member Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Member Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Full Name</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">@Model.Type</dd>

                                @if (Model.Type == MemberType.Student)
                                {
                                    <dt class="col-sm-4">ID</dt>
                                    <dd class="col-sm-8">@Model.StudentId</dd>
                                }
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@(Model.Status == MemberStatus.Active ? "success" : "danger")">
                                        @Model.Status
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Joined Date</dt>
                                <dd class="col-sm-8">@Model.JoinedDate.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Address</dt>
                                <dd class="col-sm-8">@Model.Address</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                order: [[1, 'desc']]
            });
        });
    </script>
} 